{
    "name": "Custom dev container",
    "dockerComposeFile": "docker-compose.yaml",
    "service": "dev-container",
    "runServices": [
        "dev-container",
        "database",
        "redis",
        "soketi",
        "phpmyadmin",
        "mailhog"
    ],
    "workspaceFolder": "/workspaces",
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:1": {},
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/git-lfs:1": {},
        "ghcr.io/devcontainers/features/github-cli:1": {},
        "ghcr.io/devcontainers/features/sshd:1": {}
    },
    "forwardPorts": [
        80,
        443,
        3000,
        4000,
        4200,
        5000,
        5001,
        5005,
        5173,
        6001,
        8000,
        8080,
        8085,
        9000,
        9009,
        9199,
        9299,
        27017
    ],
    "portsAttributes": {
        "80": {
            "label": "HTTP",
            "onAutoForward": "silent",
            "protocol": "http"
        },
        "443": {
            "label": "HTTPS",
            "onAutoForward": "silent",
            "protocol": "https"
        },
        "3000": {
            "label": "React/Next",
            "onAutoForward": "silent",
            "protocol": "https"
        },
        "4000": {
            "label": "Nest.js",
            "onAutoForward": "silent",
            "protocol": "https"
        },
        "4200": {
            "label": "Angular",
            "onAutoForward": "silent",
            "protocol": "https"
        },
        "5000": {
            "label": "Firebase Hosting",
            "onAutoForward": "silent",
            "protocol": "https"
        },
        "5001": {
            "label": "Firebase Cloud Functions",
            "onAutoForward": "silent",
            "protocol": "https"
        },
        "5005": {
            "label": "GraphQL Playground",
            "onAutoForward": "silent",
            "protocol": "https"
        },
        "5173": {
            "label": "Vite Dev Server",
            "onAutoForward": "silent",
            "protocol": "https"
        },
        "6001": {
            "label": "Websockets Server",
            "onAutoForward": "silent",
            "protocol": "https"
        },
        "8000": {
            "label": "Laravel",
            "onAutoForward": "silent",
            "protocol": "https"
        },
        "8080": {
            "label": "Vue/Firebase Cloud Firestore",
            "onAutoForward": "silent",
            "protocol": "https"
        },
        "8085": {
            "label": "Firebase Pub/Sub",
            "onAutoForward": "silent",
            "protocol": "https"
        },
        "9000": {
            "label": "Firebase Realtime Database",
            "onAutoForward": "silent",
            "protocol": "https"
        },
        "9009": {
            "label": "Firebase Authentication",
            "onAutoForward": "silent",
            "protocol": "https"
        },
        "9199": {
            "label": "Firebase Cloud Storage",
            "onAutoForward": "silent",
            "protocol": "https"
        },
        "9299": {
            "label": "Firebase Eventarc",
            "onAutoForward": "silent",
            "protocol": "https"
        },
        "27017": {
            "label": "MongoDB",
            "onAutoForward": "silent",
            "protocol": "https"
        }
    },
    "otherPortsAttributes": {
        "onAutoForward": "ignore",
        "protocol": "https"
    },
    "hostRequirements": {
        "cpus": 2,
        "memory": "4gb",
        "storage": "20gb"
    },
    "containerEnv": {
        "GIT_EDITOR": "code --wait"
        // "PATH": "${removeEnv:PATH}"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.vscode-typescript-next",
                "ms-dotnettools.vscode-dotnet-runtime",
                "adrianwilczynski.alpine-js-intellisense",
                "steoates.autoimport",
                "mgmcdermott.vscode-language-babel",
                "bungcip.better-toml",
                "njpwerner.autodocstring",
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "streetsidesoftware.code-spell-checker",
                "naumovs.color-highlight",
                "batisteo.vscode-django",
                "ms-azuretools.vscode-docker",
                "EditorConfig.EditorConfig",
                "dbaeumer.vscode-eslint",
                "toba.vsfire",
                "donjayamanne.githistory",
                "codezombiech.gitignore",
                "eamodio.gitlens",
                "GraphQL.vscode-graphql",
                "wix.vscode-import-cost",
                "VisualStudioExptTeam.vscodeintellicode",
                "VisualStudioExptTeam.intellicode-api-usage-examples",
                "ms-python.isort",
                "ms-toolsai.vscode-jupyter-cell-tags",
                "ms-toolsai.jupyter-renderers",
                "ms-toolsai.vscode-jupyter-slideshow",
                "ms-toolsai.jupyter-keymap",
                "yzhang.markdown-all-in-one",
                "mongodb.mongodb-vscode",
                "ahmadalli.vscode-nginx-conf",
                "christian-kohler.npm-intellisense",
                "christian-kohler.path-intellisense",
                "xdebug.php-debug",
                "bmewburn.vscode-intelephense-client",
                "MehediDracula.php-namespace-resolver",
                "esbenp.prettier-vscode",
                "rvest.vs-code-prettier-eslint",
                "Prisma.prisma",
                "ms-python.vscode-pylance",
                "ms-python.python",
                "donjayamanne.python-environment-manager",
                "mgesbert.python-path",
                "njqdev.vscode-python-typehint",
                "wholroyd.jinja",
                "KevinRose.vsc-python-indent",
                "Vue.vscode-typescript-vue-plugin",
                "octref.vetur",
                "Vue.volar",
                "jeremyrajan.webpack",
                "redhat.vscode-xml",
                "DotJoshJohnson.xml",
                "redhat.vscode-yaml",
                "Angular.ng-template",
                "mrmlnc.vscode-apache",
                "formulahendry.auto-close-tag",
                "formulahendry.auto-rename-tag",
                "jeff-hykin.better-cpp-syntax",
                "aaron-bond.better-comments",
                "ms-vscode.cpptools-themes",
                "Equinusocio.vsc-community-material-theme",
                "mikestead.dotenv",
                "DigitalBrainstem.javascript-ejs-support",
                "dsznajder.es7-react-js-snippets",
                "GraphQL.vscode-graphql-syntax",
                "heybourn.headwind",
                "vincaslt.highlight-matching-tag",
                "ryannaddy.laravel-artisan",
                "austenc.laravel-blade-spacer",
                "glitchbl.laravel-create-view",
                "amiralizadeh9480.laravel-extra-intellisense",
                "ctf0.laravel-goto-env",
                "codingyu.laravel-goto-view",
                "ctf0.laravel-goto-view",
                "rafa-acioly.laravel-helpers",
                "mohamedbenhida.laravel-intellisense",
                "onecentlin.laravel5-snippets",
                "cjhowe7.laravel-blade",
                "naoray.laravel-goto-components",
                "ctf0.laravel-goto-controller",
                "MrChetan.laravel-goto-config",
                "ctf0.laravel-goto-path",
                "ctf0.laravel-goto-config",
                "ctf0.laravel-goto-lang",
                "PKief.material-icon-theme",
                "Equinusocio.vsc-material-theme",
                "william-voyek.vscode-nginx",
                "geeksharp.openssl-configuration-file",
                "hangxingliu.vscode-systemd-support",
                "coolbear.systemd-unit-file",
                "PeterMekhaeil.vscode-tailwindcss-explorer",
                "bradlc.vscode-tailwindcss",
                "austenc.tailwind-docs",
                "macieklad.tailwind-sass-syntax",
                "wayou.vscode-todo-highlight",
                "vuetifyjs.vuetify-vscode",
                "ms-azuretools.vscode-docker",
                "ms-vscode-remote.remote-containers",
                "GitHub.vscode-pull-request-github",
                "MS-vsliveshare.vsliveshare-pack",
                "ms-kubernetes-tools.vscode-kubernetes-tools",
                "Atlassian.atlascode"
            ],
            "settings": {
                "workbench.iconTheme": "material-icon-theme",
                "editor.glyphMargin": false,
                "files.insertFinalNewline": true,
                "editor.folding": true,
                "editor.fontSize": 16,
                "editor.wordWrap": "on",
                "editor.unicodeHighlight.invisibleCharacters": false,
                "window.zoomLevel": 1,
                "editor.tabSize": 4,
                "editor.fontFamily": "'Operator Mono Medium', 'Fira Code Retina', Monaco, Consolas, 'Courier New', monospace",
                "editor.fontLigatures": true,
                "window.menuBarVisibility": "classic",
                "editor.bracketPairColorization.enabled": true,
                "editor.guides.bracketPairs": "active",
                "workbench.editor.decorations.colors": true,
                "workbench.editor.decorations.badges": true,
                "editor.formatOnSave": true,
                "editor.formatOnPaste": true,
                "files.eol": "\n",
                "editor.minimap.enabled": false,
                "editor.renderWhitespace": "none",
                "editor.inlineSuggest.enabled": true,
                "editor.suggestSelection": "first",
                "editor.accessibilitySupport": "off",
                "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
                "files.exclude": {
                    "__pycache__/": true,
                    ".classpath": true,
                    ".dart_tool": true,
                    ".factorypath": true,
                    ".flutter-*": true,
                    ".hg": true,
                    ".idea/": true,
                    ".metadata": true,
                    ".next/": true,
                    ".nuxt/": true,
                    ".packages": true,
                    ".project": true,
                    ".settings": true,
                    ".svn": true,
                    ".temp/": true,
                    ".venv/": true,
                    ".vscode": true,
                    "*-lock.*": true,
                    "*.lock": true,
                    "*.lock.*": true,
                    "**/.DS_Store": true,
                    "**/.git": true,
                    "**/node_modules/": true,
                    "vendor/": true
                },
                "explorer.confirmDelete": true,
                "explorer.confirmDragAndDrop": true,
                "workbench.sideBar.location": "left",
                "workbench.startupEditor": "none",
                "git.autofetch": true,
                "editor.largeFileOptimizations": true,
                "workbench.colorTheme": "Community Material Theme High Contrast",
                // Emmet settings
                "emmet.includeLanguages": {
                    "javascript": "javascriptreact",
                    "html": "html",
                    "vue": "vue",
                    "blade": "html"
                },
                // Language specific settings
                "[html]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode"
                },
                "[javascript]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode"
                },
                "[javascriptreact]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode",
                    "editor.formatOnPaste": true,
                    "editor.formatOnSave": true
                },
                "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
                "javascript.format.insertSpaceAfterOpeningAndBeforeClosingTemplateStringBraces": true,
                "cSpell.enabled": true,
                "javascript.format.semicolons": "remove",
                "javascript.updateImportsOnFileMove.enabled": "always",
                "[vue]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode"
                },
                "[json]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode"
                },
                "[jsonc]": {
                    "editor.defaultFormatter": "vscode.json-language-features"
                },
                "scss.validate": true,
                "[typescript]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode",
                    "editor.formatOnPaste": true,
                    "editor.formatOnSave": true
                },
                "[typescriptreact]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode",
                    "editor.formatOnSave": true,
                    "editor.formatOnPaste": true
                },
                "[scss]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode"
                },
                "[css]": {
                    "editor.defaultFormatter": "vscode.css-language-features"
                },
                "[blade]": {
                    "editor.autoClosingBrackets": "always",
                    "editor.formatOnSave": false,
                    "editor.formatOnPaste": false
                },
                "[dockercompose]": {
                    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
                },
                "[yaml]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode"
                },
                "typescript.updateImportsOnFileMove.enabled": "always",
                "vetur.experimental.templateInterpolationService": true,
                // Prettier settings
                "prettier.arrowParens": "always",
                "prettier.bracketSameLine": false,
                "prettier.bracketSpacing": true,
                "prettier.endOfLine": "lf",
                "prettier.htmlWhitespaceSensitivity": "css",
                "prettier.jsxSingleQuote": false,
                "prettier.printWidth": 100,
                "prettier.quoteProps": "as-needed",
                "prettier.semi": true,
                "prettier.singleAttributePerLine": false,
                "prettier.singleQuote": true,
                "prettier.tabWidth": 4,
                "prettier.trailingComma": "none",
                "prettier.useTabs": false,
                "prettier.vueIndentScriptAndStyle": true,
                "intelephense.files.exclude": [
                    "**/.git/**",
                    "**/.svn/**",
                    "**/.hg/**",
                    "**/CVS/**",
                    "**/.DS_Store/**",
                    "**/node_modules/**",
                    "**/bower_components/**",
                    "**/vendor/**/{Tests,tests}/**",
                    "**/.history/**",
                    "**/vendor/**/vendor/**",
                    "**/temp/**"
                ],
                "redhat.telemetry.enabled": true,
                "gitlens.views.remotes.branches.layout": "list",
                "security.workspace.trust.untrustedFiles": "open",
                "css.lint.unknownAtRules": "ignore",
                "scss.lint.unknownAtRules": "ignore",
                "jupyter.interactiveWindowMode": "perFile"
            }
        }
    }
}
